# network size
SIZE 300

# parameters of periodic execution
CYCLES 1000
CYCLE 10

MINDELAY 0
MAXDELAY 0
# drop is a probability, 0<=DROP<=1
DROP 0

random.seed 123456789
network.size SIZE
simulation.cycles CYCLES
simulation.logtime 0

################### protocols ===========================

protocol.link peersim.core.IdleProtocol

protocol.cep peersim.centralized.AdaptiveCEP
protocol.cep.linkable link
protocol.cep.step CYCLE
protocol.cep.transport tr

protocol.urt peersim.transport.UniformRandomTransport
protocol.urt.mindelay (CYCLE*MINDELAY)/100
protocol.urt.maxdelay (CYCLE*MAXDELAY)/100

protocol.tr peersim.transport.UnreliableTransport
protocol.tr.transport urt
protocol.tr.drop DROP

################### initialization ======================
include.init rndlink sch ani
init.rndlink peersim.dynamics.WireKOut
init.rndlink.k 11
init.rndlink.protocol link

init.sch peersim.edsim.CDScheduler
init.sch.protocol cep
init.sch.randstart

init.ani peersim.centralized.AdaptiveNetworkInitializer
init.ani.protocol cep

################ control ==============================

control.0 peersim.centralized.AdaptiveObserver
control.0.protocol cep
control.0.transportprotocol urt
control.0.adaptiveLatency false
control.0.adaptiveBandwidth true
#control.0.step CYCLE